# zNEP17 Vercel production environment template.
# Copy these into Vercel Project Settings -> Environment Variables (Production).
# Do not commit real secrets.

# Core chain/runtime configuration
RPC_URL=https://n3seed1.ngd.network:20332
VAULT_HASH=0xa33b0788ad0324c5eb40ea803be8ed96f24d7fa6
# Optional legacy HTTP RPC override (NOT recommended):
# RELAYER_ALLOW_INSECURE_RPC=true

# Relayer signer and policy
RELAYER_WIF=REPLACE_WITH_RELAYER_WIF
ALLOWED_TOKEN_HASHES=0xd2a4cff31913016155e38e474a2c06d08be276cf,0xef4073a0f2b305a38ec4050e4d3d28bc40ea63f5
RELAYER_ALLOWED_ORIGINS=https://znep17.app,https://www.znep17.app
RELAYER_REQUIRE_AUTH=false
RELAYER_REQUIRE_ORIGIN_ALLOWLIST=true
RELAYER_REQUIRE_DURABLE_GUARDS=true
RELAYER_REQUIRE_STRONG_ONCHAIN_VERIFIER=true
RELAYER_EXPECTED_VERIFIER_HASH=0x744c30270df05fa6652a713436202e01a66f454f
RELAYER_TRUST_PROXY_HEADERS=true

# Durable guard storage (Upstash Redis)
KV_REST_API_URL=https://example.upstash.io
KV_REST_API_TOKEN=REPLACE_WITH_UPSTASH_REST_TOKEN

# Frontend safety toggles
NEXT_PUBLIC_ALLOW_CUSTOM_VAULT_HASH=false
NEXT_PUBLIC_ENABLE_MAINTAINER_TOOLS=false

# Optional UI display/fallback values
NEXT_PUBLIC_VAULT_HASH=0xa33b0788ad0324c5eb40ea803be8ed96f24d7fa6
NEXT_PUBLIC_EXPLORER_TX_BASE_URL=https://ndora.org/transaction/
# NEXT_PUBLIC_BASE_PATH=/app

# Maintainer endpoint hardening (server-to-server only)
MAINTAINER_VAULT_HASH=0xa33b0788ad0324c5eb40ea803be8ed96f24d7fa6
MAINTAINER_RPC_URL=https://n3seed1.ngd.network:20332
MAINTAINER_REQUIRE_AUTH=true
# Maintainer uses RELAYER_WIF + RELAYER_API_KEY by default.
# Optional dedicated overrides:
# MAINTAINER_WIF=REPLACE_WITH_MAINTAINER_WIF
# MAINTAINER_API_KEY=REPLACE_WITH_MAINTAINER_API_KEY
MAINTAINER_REQUIRE_DURABLE_LOCK=true
# Optional legacy HTTP RPC override (NOT recommended):
# MAINTAINER_ALLOW_INSECURE_RPC=true
# Recommended when maintainer is called from fixed origin(s)
MAINTAINER_REQUIRE_ORIGIN_ALLOWLIST=true
MAINTAINER_ALLOWED_ORIGINS=https://znep17.app

# Maintainer off-chain state store (Supabase)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=REPLACE_WITH_SUPABASE_SERVICE_ROLE_KEY

# Optional maintainer tuning
# MAINTAINER_RPC_URL=https://n3seed1.ngd.network:20332
# MAINTAINER_MAX_SYNC_LEAVES=20000
# MAINTAINER_CHAIN_FETCH_CONCURRENCY=6
# MAINTAINER_LOCK_TTL_MS=120000

# Optional relayer tuning
# RELAYER_MERKLE_MAX_BOOTSTRAP_LEAVES=50000
